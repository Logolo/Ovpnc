  <xsd:enumeration value="DES-EDE-CFB" />
  <xsd:enumeration value="DES-EDE3-CFB" />
  <xsd:enumeration value="DES-EDE-OFB" />
  <xsd:enumeration value="DES-EDE3-OFB" />
  <xsd:enumeration value="DESX-CBC" />
  <xsd:enumeration value="BF-CBC" />
