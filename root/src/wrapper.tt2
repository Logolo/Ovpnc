[% IF no_wrapper OR template.no_wrapper %]
	[% content %]
[% ELSE %]
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" [%#
    %]"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<meta HTTP-EQUIV="pragma" CONTENT="no-cache">
	<meta HTTP-EQUIV="expires" CONTENT="Tue, 31 Dec 2003 23:00:00 GMT">
	<meta http-equiv="cache-control" content="no-cache" />
	<meta http-equiv="expires" content="0" />
	<meta http-equiv="cache-control" content="max-age=0" />
	<head>
    	<title>Ovpnc[% IF title %] - [% title %][% END %]</title>
		<!-- JS and CSS -->
		[% assets.export %]
    </head>
    <body>
		<div id="top_header">
			<div id="top_header_content">OvpnController</div>
			<div id="message_container">
				<div id="message" class="message box_shadow"></div>
			</div>
			<div class="clear"></div>
		</div>
    	<div id="outer">
			<!-- left frame -->
			<div id="left_frame">
				<!-- navigation slider menu -->			
				[% IF logged_in %]
					[% INCLUDE menu.tt2 %]
				[% END %]
			</div>
			<!-- middle frame -->
			<div id="middle_frame">
				[% IF this_link != 'root' %]
					[% content %]
				[% END %]
			</div>
			<!-- right frame -->
			<div id="right_frame">
				[% IF this_link == 'root' %]
					[% content %]
				[% ELSE %]
					[% IF logged_in %]
						[% INCLUDE 'index.tt2' %]
					[% END %]
				[% END %]
			</div>
			<div class="clear"></div>
    	</div><!-- outer -->
		<input id="username" type="hidden" name="[% username %]" />
		<input id="geo_username" type="hidden" name="[% geo_username %]" />
	</body>
</html>
[% END %]
